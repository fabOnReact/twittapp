<div class='container'>
	<h1>Welcome to my TwittApp</h1>
	
	<% if @search.present? && @search.is_empty? && params[:search].present? %>
		<div class="alert alert-warning" role="alert">
  			<strong>Warning!</strong>There are no twitts containing the term <%= params[:search] %>
		</div>
	<% end %>	

	
	<%= form_tag(posts_path, :method => 'get', class: 'form-search', id: 'search-form') do %> 
	    <div class="input-append">
	    	<%= text_field_tag :search, params[:search], placeholder: 'Search Twitts', class: "span2 search-query" %>
	        <%= submit_tag 'Search', class: 'btn' %>
	    </div>
	<% end %>

	<% if params[:search].present? %>
		<% @search.each do |tweet| %>
			<div class='row'>
				<div class='col-sm-4'>
					<%# binding.pry %>
					<%# image = .to_s %>
					<img src=<%= tweet.attrs[:user][:profile_image_url_https] %> >
				</div>
				<div class='col-sm-8'>
					<%= tweet.text %>
				</div>
			</div>
		<% end %>
	<% end %>


